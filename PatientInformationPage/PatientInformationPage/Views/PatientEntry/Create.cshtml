@model PatientInformationPage.Models.PatientInformation

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col">
        <form id="PatientAddForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h2>Add New Patient</h2>
            <div class="form-group row mb-2">
                <label asp-for="PatientName" class="col-form-label col-2"></label>
                <div class="col-6">
                    <input asp-for="PatientName" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="PatientName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-form-label col-2">Disease Name</label>

                <div class="col-4">
                    <select name="DiseaseId" asp-items="@( (ViewBag.DiseaseInformation) is SelectList ? ViewBag.DiseaseInformation : new SelectList(ViewBag.DiseaseInformation, "DiseaseId", "DiseaseName") )" class="form-control singleProductDropdown">
                        <option value="" selected>---Select---</option>
                    </select>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-10 offset-2">
                    <button type="submit" data-category="CRUD" id="btnCustomerAddFormSubmit" data-href="@Url.Action("Create","PatientEntry")" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
